{
  "top_k_masks": 3,
  "inner_index": 0,
  "outer_index": -1,
  "tta_steps": 3,
  "batch_size": 1,
  "loss_weights": {
    "anchor": 1.0,
    "entropy": 0.1,
    "consistency": 0.5,
