  "optimizer": {
    "lr": 1e-4,
    "weight_decay": 0.0,
    "max_grad_norm": 1.0
  },
  "lora": {
    "target": "mask_decoder",
    "rank": 4
  },
  "teacher_student": {
    "use_ema": true,
    "ema_momentum": 0.99
  }
}
